<%= bootstrap_form_for(@student) do |f| %>
    <%= f.text_field :name, :placeholder => "Full name" %>
    <%= f.email_field :email, :placeholder => "Email" %>
    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.submit "Create", :class => "btn btn-submit btn-success" %>&nbsp
     <%= link_to "Back", login_path, :class => 'btn btn-info'%>
<% end %>