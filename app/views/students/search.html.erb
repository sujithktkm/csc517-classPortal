<%= bootstrap_form_tag url: students_search_submit_path(:student_id => params[:student_id], :status => params[:status]), method: 'search_submit'  do |f| %>
    <%= f.text_field :searchbox, label: "Enter search string" %>
    <%= f.select(:status, options_for_select([['Active', true], ['Inactive', false]]), {include_blank: true}, {class: "form-control"}) %>
    <%= f.submit 'Search', :class => 'btn btn-success'%>  &nbsp
    <%= link_to "Back", root_path, :class => 'btn btn-info'%>
<% end %>

