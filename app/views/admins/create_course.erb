<%= bootstrap_form_for(Course.new,:url => url_for(:controller => 'admins', :action => 'create_course_save')) do |f| %>
    <%= f.text_field :coursenumber, :placeholder => "Course Number" %>
    <%= f.text_field :title, :placeholder => "Course Name" %>
    <%= f.text_field :description, :placeholder => "description" %>
    <%= f.date_select :start_date %>
    <%= f.date_select :end_date %>
    <%= f.select(:status, options_for_select([['Active', true], ['InActive', false]]), {}, {class: "form-control"}) %>
    <%= f.collection_select :instructor_id, Instructor.all, :id, :name, include_blank: false %>
    <%= f.submit "Submit", class: "btn-submit" %>

<% end %>

