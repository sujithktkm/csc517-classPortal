<%= form_for(@Course, :url => url_for(:controller => 'admins', :action => 'edit_admin_course_save')) do |f| %>
    <div class="form_row">
      <label for="text">Course Number:</label>
      <%= f.text_field :coursenumber %>
    </div>
    <div class="form_row">
      <label for="text">Course Title:</label>
      <%= f.text_field :title %>
    </div>
    <div class="form_row">
      <label for="text">Course Description:</label>
      <%= f.text_field :description %>
    </div>

    <div class="form_row">
      <label for="text">Start Date:</label>
      <%= f.date_select :start_date %> <br>
    </div>
    <div class="form_row">
      <label for="text">End Date:</label>
      <%= f.date_select :end_date %>
    </div>
    <div class="form_row">
      <label> Status</label>
      <label for="text">
        <%= f.select(:status, options_for_select([['Active', true], ['InActive', false]]), {}, {class: 'form-control'}) %>
      </label>
    </div>
    <div class="form_row">
      <label> Instructor</label>
      <label for="text">
        <%= f.collection_select :instructor_id, Instructor.where(is_activeuser: true), :id, :name, include_blank: false %>
      </label>
    </div>
    <div class="actions">
      <%= f.submit 'Submit', :class => 'btn btn-info' %>
      <%= link_to 'Back', admins_manage_course_path, :class => 'btn btn-info' %>
    </div>
<% end %>

