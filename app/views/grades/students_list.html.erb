<%= bootstrap_form_tag url: grades_edit_path(:student_id => params[:student_id], :course_id => params[:course_id]), method: 'edit'  do |f| %>
    <%= f.collection_select :student_id, Student.joins(:student_enrollments).where('student_enrollments.status = :status AND student_enrollments.course_id = :courseid', :status => 'ENROLLED', :courseid => params[:course_id].to_i), :id, :name, include_blank: true %>
    <%= f.submit 'Select', :class => 'btn btn-submit btn-success'%>  &nbsp   <%= link_to 'Back', :back, :class => 'btn btn-info'%>
<% end %>