Messages<br>
<% @message.each do |message| %>
    <% if message.role=="Instructor" %>
        <%= User.find(session[:user_id]).name %> --

        <%= message.content %> <br>
    <%else%>

        <%= User.find(message.student_id).name %> --
        <%= message.content %> <br>
    <%end%>


<% end %>


<%= form_for(@new_message, :url => url_for(:controller => 'messages', :action => 'instructor_message_save')) do |f| %>
    <%= f.text_field :content %>

    <%= f.submit 'Send Message', :class => 'btn btn-info' %>

<% end %>